<odoo>
    <record id="view_order_form_custom" model="ir.ui.view">
        <field name="name">sale.order.form.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_management.sale_order_form_quote"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <group name="save_date" string="Programacion de fechas">
                    <field name="check_in" string="Fecha de ingreso"/>
                    <field name="check_out" string="Fecha de salida"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="pax" string="PAX"/>
                <field name="adt" string="ADT"/>
                <field name="chd" string="CHD"/>
                <field name="age" string="EDAD"/>
                <field name="room_type" string="Tipo de habitacion"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_list_filter" model="ir.ui.view">
        <field name="name">sale.order.list.filter</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//list//field[@name='product_template_id']" position="before">
                <field name="proveedor" string="Proveedor" optional="show"/>
                <field name="tipo_servicio" string="Tipo de servicio" optional="show"/>
                <field name="product_new_domain_ids" invisible="1" optional="hide"/>
            </xpath>
            <xpath expr="//list//field[@name='product_template_id']" position="attributes">
                <attribute name="domain">[('id', 'in', product_new_domain_ids)]</attribute>
            </xpath>
            <xpath expr="//list//field[@name='product_template_id']" position="after">
                <field name="fecha_inicio" string="Fecha inicio" optional="hide"/>
                <field name="fecha_fin" string="Fecha fin" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_form_counter" model="ir.ui.view">
        <field name="name">sale.order.form.counter</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="counter_id" string="Vendedor de la agencia"/>
            </xpath>
        </field>
    </record>

    <record id="counter_view_form" model="ir.ui.view">
        <field name="name">res.users.counter.form</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <group>
                            <field name="login" string="Código" />
                            <field name="name"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="is_counter" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="counter_view_list" model="ir.ui.view">
        <field name="name">res.users.counter.list</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <list >
                <field name="login" string="Código" />
                <field name="name"/>
                <!--field name="branch_id"/-->
            </list>
        </field>
    </record>

    <record id="action_counter_act_window" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Counters</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
        <field name="domain">[('is_counter', '=', True), ('active', 'in', [True, False])]</field>
        <field name="context">{'default_active': False, 'default_active_delivery': True, 'default_is_counter':True}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="action_counter_act_window_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="counter_view_list"/>
        <field name="act_window_id" ref="action_counter_act_window"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_counter_act_window_form">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="counter_view_form"/>
        <field name="act_window_id" ref="action_counter_act_window"/>
    </record>

    <record id="rt_action_tipo_servicios" model="ir.actions.act_window">
        <field name="name">Tipo de servicios</field>
        <field name="res_model">tipo.servicio</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo tipo de servicio
            </p>
        </field>
    </record>

    <menuitem id="menu_action_counter"
        name="Counters"
        action="action_counter_act_window"
        parent="sale.sale_menu_config_activities"
        sequence="30"/>

    <menuitem id="rt_menu_tipo_servicios"
            name="Tipo de servicios"
            parent="sale.sale_menu_config_activities"
            action="rt_action_tipo_servicios"
            sequence="40"/>

    <!-- Vistas para Tipo de Servicio -->
    <record id="tipo_servicio_list_view" model="ir.ui.view">
        <field name="name">tipo.servicio.list</field>
        <field name="model">tipo.servicio</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Tipos de Servicio">
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="tipo_servicio_form_view" model="ir.ui.view">
        <field name="name">tipo.servicio.form</field>
        <field name="model">tipo.servicio</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Tipo de Servicio">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Descripción del tipo de servicio..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista extendida para productos -->
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.test_agency</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Agregar campos en la columna derecha después de Categoría -->
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="proveedor"/>
                <field name="tipo_servicio"/>
            </xpath>
        </field>
    </record>

</odoo>