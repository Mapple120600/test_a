<odoo>
    <record id="view_order_form_custom" model="ir.ui.view">
        <field name="name">sale.order.form.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <group name="save_date" string="Programacion de fechas">
                    <field name="check_in" string="Fecha de ingreso"/>
                    <field name="check_out" string="Fecha de salida"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="pax" string="Pasajeros"/>
                <field name="adt" string="Pasajeros Adultos"/>
                <field name="chd" string="Pasajeros Niños"/>
                <field name="age" string="Edad de los niños"/>
                <field name="room_type" string="Tipo de habitacion"/>
            </xpath>
        </field>
    </record>

    <record id="rt_action_counters" model="ir.actions.act_window">
        <field name="name">Counter</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="rt_action_tipo_servicios" model="ir.actions.act_window">
        <field name="name">Tipo de servicios</field>
        <field name="res_model">tipo.servicio</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo tipo de servicio
            </p>
        </field>
    </record>

    <menuitem id="rt_menu_counter"
            name="Counters"
            parent="sale.sale_menu_config_activities"
            action="rt_action_counters"
            sequence="30"/>

    <menuitem id="rt_menu_tipo_servicios"
            name="Tipo de servicios"
            parent="sale.sale_menu_config_activities"
            action="rt_action_tipo_servicios"
            sequence="40"/>

    <!-- Vistas para Tipo de Servicio -->
    <record id="tipo_servicio_list_view" model="ir.ui.view">
        <field name="name">tipo.servicio.list</field>
        <field name="model">tipo.servicio</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Tipos de Servicio">
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="tipo_servicio_form_view" model="ir.ui.view">
        <field name="name">tipo.servicio.form</field>
        <field name="model">tipo.servicio</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Tipo de Servicio">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Descripción del tipo de servicio..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista extendida para productos -->
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.test_agency</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Agregar campos en la columna derecha después de Categoría -->
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="proveedor"/>
                <field name="tipo_servicio"/>
            </xpath>
        </field>
    </record>

</odoo>